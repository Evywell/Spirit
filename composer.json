{
    "require": {
        "php": "7.4.*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.11",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Spirit\\" : "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spirit\\Test\\" : "./tests/Unit",
            "Spirit\\Test\\Driver\\" : "./tests/resources/Driver",
            "Spirit\\Test\\Entity\\" : "./tests/resources/Entity"
        }
    }
}
